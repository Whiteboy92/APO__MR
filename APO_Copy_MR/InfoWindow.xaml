<Window x:Class="APO_Copy_MR.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Height="180" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" ShowInTaskbar="False">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <!-- Information text -->
            <TextBlock TextAlignment="Center" Margin="15" 
                       Text="Aplikacja zbiorcza z ćwiczeń &#x0a; laboratoryjnych &#x0a; Autor: Marcin Ryba &#x0a; Prowadzący: Dr. inż. Łukasz Roszkowiak &#x0a; Algorytmy Przetwarzania Obrazów 2023 &#x0a; WIT grupa ID: ID06IO2" 
                       FontSize="15" FontFamily="Arial"/>

            <!-- Close button -->
            <Button Content="Close" Width="90" Height="30" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="BtnClose_Click" Grid.Row="1" />
        </StackPanel>
    </Grid>
</Window>