<Window x:Class="APO_Copy_MR.MainWindow"
        MinWidth="360"
        MinHeight="300"
        MaxWidth="360"
        MaxHeight="300"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="APO_MR" Height="300" Width="360">
    
    <Grid Background="Cyan">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/> <!-- Side Panel -->
            <ColumnDefinition Width="180"/> <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Side Panel -->
        <StackPanel Grid.Column="0" Background="Cyan" HorizontalAlignment="Left">
            <Button x:Name="BtnOpenNewFile" Content="Upload Image" Margin="10,10,0,0"  Width="150" Height="40" Click = "BtnOpenNewFile_Click" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
            <Button x:Name="BtnInfo" Content="Info" Margin="0,10,25,0" Width="150" Height="40" Click = "btnInfo_Click" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        
    </Grid>
</Window>